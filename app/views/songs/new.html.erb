<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre %>
  <%= f.text_field :genre_id, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <br />

  <%= f.label :song_notes %><br>
  <input id="song_notes_attributes_0_content" name="song[song_notes][]"><br>
  <input id="song_notes_attributes_1_content" name="song[song_notes][]"><br>

  <%= f.submit %>
<% end %>